#!/bin/bash

# Extract relevant fields from data.json using jq
name=$(jq -r '.name' data.json | sed 's/\b\(.\)/\u\1/') # Capitalize first letter
height_dm=$(jq -r '.height' data.json)  # height in decimeters
weight_hg=$(jq -r '.weight' data.json)  # weight in hectograms

# Extract the first type (if multiple)
type=$(jq -r '.types[0].type.name' data.json | sed 's/\b\(.\)/\u\1/') # Capitalize first letter

# Convert height to meters (decimeters / 10)
height_m=$(echo "$height_dm" | awk '{printf "%.1f", $1 / 10}')

# Convert weight to kg (hectograms / 10)
weight_kg=$(echo "$weight_hg" | awk '{printf "%d", $1 / 10}')

# Format and print the output
echo "$name is of type $type, weighs ${weight_kg}kg, and is ${height_m}m tall."
