#!/bin/bash

# Extract fields with jq
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')
height_dm=$(jq -r '.height' data.json)
weight_hg=$(jq -r '.weight' data.json)

# Convert height to meters with one decimal place
height=$(awk "BEGIN {printf \"%.1f\", $height_dm/10}")

# Convert weight to kg as integer
weight=$(awk "BEGIN {printf \"%d\", $weight_hg/10}")

# Print exactly as requested
echo "$name is of type $type, weighs ${weight}kg, and is ${height}m tall."
